{
    "manifest_version": 3,
    "name": "Refresh",
    "description": "Productivity Extension",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "scripting", "storage", "webNavigation"],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["http://localhost:3001/"],
          "js": ["content.js"]
        }
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Click on this button"
    },
    "icons": {
        "16": "images/cucSlice.ico",
        "48": "images/cucSlice.ico",
        "128": "images/cucSlice.ico"
    }
  }

  